@page "/"
@inject ISnackbar snackbar

<AuthorizeView>
    <Authorized>        
        <MudAlert Severity="Severity.Success"
                  Variant="Variant.Outlined"
                  Square="true"
                  Class="my-2">
            Welcome in our site @context.User.FindFirst(System.Security.Claims.ClaimTypes.GivenName).Value
        </MudAlert>
    </Authorized>
    <NotAuthorized>
        <MudAlert Severity="Severity.Warning"
                  Variant="Variant.Outlined"
                  Square="true"
                  Class="my-2">
            Please login
        </MudAlert>
    </NotAuthorized>
</AuthorizeView>
